{
    "name": "your-name/my-mvc-project",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "smarty/smarty": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "MiniMVC\\": "src/MiniMVC/",
            "App\\": "app/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "friendsofphp/php-cs-fixer": "^3.85"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests/",
        "fix": "./vendor/bin/php-cs-fixer fix ."
    }
}